<?xml version="1.0"?>
<odoo>
    <record id="equation_coffee_crm_inherit_crm_lead_view_form" model="ir.ui.view">
        <field name="name">equation.coffee.crm.inherit.crm.lead.view.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="equation_coffe_potential_microlots" string="Potential Microlots">
                    <group name="main_group">
                        <group name="left_group">
                            <field name="potential_microlot_priority" widget="priority"/>
                            <field name="potential_varietals_priority" widget="priority"/>
                            <field name="potential_volume_priority" widget="priority"/>
                        </group>
                        <group name="right_group">
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
