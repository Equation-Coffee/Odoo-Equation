<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="muestras_order_extension_search" model="ir.ui.view">
        <field name="name">muestras.order_extension.view.search</field>
        <field name="model">muestras.order_extension</field>
        <field name="arch" type="xml">
            <search string="Search Extension Reason">
                <field name="order_id"/>
                <field name="previous_deadline"/>
                <field name="date_difference"/>
                <field name="order_extension_reason"/>
                <field name="notes"/>
                <field name="user_id"/>
                <!-- <filter string="Archived" name="inactive" domain="[('active','=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Company" name="company_id" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group> -->
            </search>
        </field>
    </record>

    <record id="muestras_order_extension_view_form" model="ir.ui.view">
        <field name="name">muestras.order_extension.view.form</field>
        <field name="model">muestras.order_extension</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Extension Reason">
                <sheet>
                    <div name="button_box" class="oe_button_box"/>
                    <!-- <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/> -->
                    <div class="oe_title" name="muestras_order_extension_title">
                        <label for="order_id" id="muestras_order_extension_title"/>
                        <h1>
                            <field name="order_id" placeholder="e.g. Roaster" class="d-block" required='1'/>
                            <!-- <field name="active" invisible='1'/> -->
                        </h1>
                    </div>
                    <group>
                        <group name="info_left">
                            <!-- <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/> -->
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="muestras_order_extension_view_list" model="ir.ui.view">
        <field name="name">muestras.order_extension.view.list</field>
        <field name="model">muestras.order_extension</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Origins">
                <field name="order_id"/>
                <!-- <field name="company_id" groups="base.group_multi_company"/> -->
            </list>
        </field>
    </record>

    <record id="order_extension_window" model="ir.actions.act_window">
        <field name="name">Order Extension History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">muestras.order_extension</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Order Extension History
            </p>
        </field>
    </record>
</odoo>
