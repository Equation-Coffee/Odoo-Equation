<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="price_view">
      <field name="name">muestras.price.list</field>
      <field name="model">muestras.price</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
          <field name="date"/>
        </list>
      </field>
    </record>

    <record id="muestras_price_view_form" model="ir.ui.view">
        <field name="name">muestras.price.view.form</field>
        <field name="model">muestras.price</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Price Indicator">
                <sheet>
                    <div name="button_box" class="oe_button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <div class="oe_title" name="muestras_price_title">
                        <label for="name" id="muestras_price_title"/>
                        <h1>
                            <field name="name" placeholder="e.g. TRM" class="d-block" required='1'/>
                            <field name="active" invisible='1'/>
                        </h1>
                    </div>
                    <group>
                        <group name="info_left">
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="value"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="History" name="price_history">
                            <field name="price_history" widget="section_and_note_one2many" mode="list,form">
                                <list string="History" class="specific_table_class">
                                    <field name="name"/>
                                    <field name="value"/>
                                    <field name="execution_time"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


     <record model="ir.actions.act_window" id="muestras.price_action_window">
      <field name="name">Price</field>
      <field name="res_model">muestras.price</field>
      <field name="view_mode">list,form</field>
    </record>
</odoo>